<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">

    <TextView
        android:id="@+id/mainpage_viewpager_diagnose_result_holder_textview_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="24dp"
        android:gravity="center_vertical"
        android:text="@string/mainpage_viewpager_medical_record_status_danger"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/mainpage_viewpager_diagnose_result_footer_label_info"
        android:textSize="12sp"/>
</LinearLayout>